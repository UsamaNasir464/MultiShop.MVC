@model MultiShop.Mvc.Models.ViewModels.CartDto

@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}



<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Checkout</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Checkout Start -->
@using (Html.BeginForm("OrderConfirmed", "Order", FormMethod.Post))
{

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Order.CustomerName" >Customer Name</label>
                            <input asp-for="Order.CustomerName" class="form-control" type="text" placeholder="John">
                            <span asp-validation-for="Order.CustomerName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="Order.Email">E-mail</label>
                            <input asp-for="Order.Email" class="form-control" type="text" placeholder="example@email.com">
                            <span asp-validation-for="Order.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Order.PhoneNumber">Mobile No</label>
                            <input asp-for="Order.PhoneNumber" class="form-control" type="text" placeholder="+123 456 789">
                            <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Order.Address">Address Line 1</label>
                            <input asp-for="Order.Address" class="form-control" type="text" placeholder="123 Street">
                            <span asp-validation-for="Order.Address" class="text-danger"></span>
                        </div>


                    </div>
                </div>

            </div>
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Products</h6>
                        @foreach (var item in Model.CartDetails)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@item.Product.Name</p>
                                <p>@item.Product.SalePrice</p>
                            </div>
                        }

                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                            <h6>@Model.CartHeader.OrderTotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">@(Model.CartHeader.OrderTotal / 100)</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>@(Model.CartHeader.OrderTotal + (Model.CartHeader.OrderTotal / 100))</h5>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Payment</span></h5>
                    <div class="bg-light p-30">
                        <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- Checkout End -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
